{%- assign hand_picked_count = 0 -%}
{%- for block in section.blocks -%}
  {%- if block.settings.product != blank -%}
    {%- assign hand_picked_count = hand_picked_count | plus: 1 -%}
  {%- endif -%}
{%- endfor -%}

{%- capture flickity_options -%}
{
  "prevNextButtons": true,
  "pageDots": false,
  "wrapAround": false,
  "contain": true,
  "cellAlign": "left",
  "watchCSS": true,
  "dragThreshold": 8,
  "groupCells": true,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

{%- comment -%}
  Same-collection fallback: use first collection the product belongs to,
  excluding the current product.
{%- endcomment -%}
{%- assign ppv1_same_col = product.collections.first -%}

<section class="Section Section--spacingNormal" data-section-id="{{ section.id }}" data-section-type="product-recommendations">
  {%- if section.settings.heading != blank -%}
    <header class="SectionHeader SectionHeader--center">
      <div class="Container">
        <h3 class="SectionHeader__Heading Heading u-h3">{{ section.settings.heading | escape }}</h3>
      </div>
    </header>
  {%- endif -%}

  <div class="ProductRecommendations">
    {%- if hand_picked_count > 0 -%}

      <div class="ProductListWrapper">
        <div class="ProductList ProductList--carousel Carousel" data-flickity-config='{{ flickity_options }}'>
          {%- for block in section.blocks -%}
            {%- assign rec_p = block.settings.product -%}
            {%- if rec_p != blank -%}
              <div class="Carousel__Cell">
                {% render 'product-item', product: rec_p, show_product_info: section.settings.show_product_info, show_vendor: section.settings.show_vendor, show_color_swatch: section.settings.show_color_swatch, show_labels: true %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

    {%- elsif ppv1_same_col != blank -%}

      {%- assign ppv1_rendered = 0 -%}
      {%- for col_p in ppv1_same_col.products limit: 20 -%}
        {%- unless col_p.id == product.id -%}
          {%- if ppv1_rendered < 8 -%}
            {%- assign ppv1_rendered = ppv1_rendered | plus: 1 -%}
          {%- endif -%}
        {%- endunless -%}
      {%- endfor -%}

      {%- if ppv1_rendered > 0 -%}
        <div class="ProductListWrapper">
          <div class="ProductList ProductList--carousel Carousel" data-flickity-config='{{ flickity_options }}'>
            {%- assign ppv1_show = 0 -%}
            {%- for col_p in ppv1_same_col.products limit: 20 -%}
              {%- unless col_p.id == product.id -%}
                {%- if ppv1_show < 8 -%}
                  <div class="Carousel__Cell">
                    {% render 'product-item', product: col_p, show_product_info: section.settings.show_product_info, show_vendor: section.settings.show_vendor, show_color_swatch: section.settings.show_color_swatch, show_labels: true %}
                  </div>
                  {%- assign ppv1_show = ppv1_show | plus: 1 -%}
                {%- endif -%}
              {%- endunless -%}
            {%- endfor -%}
          </div>
        </div>
      {%- else -%}
        <style>#shopify-section-{{ section.id }} { display: none; }</style>
      {%- endif -%}

    {%- else -%}
      <style>#shopify-section-{{ section.id }} { display: none; }</style>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Product recommendations",
  "class": "",
  "templates": ["product"],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "paragraph",
          "content": "Manually selected products override same-collection recommendations."
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "checkbox",
      "id": "show_product_info",
      "label": "Show product info",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_color_swatch",
      "label": "Show color swatch",
      "info": "Some colors appear white? [Learn more](http://support.maestrooo.com/article/80-product-upgrading-custom-color-for-color-swatch).",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Product",
      "name": "Product recommendations"
    }
  ]
}
{% endschema %}
