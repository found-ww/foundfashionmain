{% capture redirectScript %}{% render 'bsscommerce-redirect-product-page-logic', product: product %}{% endcapture %}{% assign redirectScript = redirectScript | strip %}{% unless redirectScript contains "Liquid error" %}{% if redirectScript != "" %}<script id="bss-redirect" type="text/javascript">window.location.replace("{{ redirectScript }}")</script>{% endif %}{% endunless %}{%- assign meta_block = section.blocks | where: 'type', 'product_meta' | first -%}
{%- assign share_buttons_block = section.blocks | where: 'type', 'share_buttons' | first -%}
{%- assign inventory_block = section.blocks | where: 'type', 'inventory' | first -%}
{%- assign buy_buttons_block = section.blocks | where: 'type', 'buy_buttons' | first -%}

{%- capture section_settings -%}
{
  "enableHistoryState": true,
  "templateSuffix": {{ product.template_suffix | json }},
  "showInventoryQuantity": {% if inventory_block != blank %}true{% else %}false{% endif %},
  "showSku": {{ meta_block.settings.show_sku | json }},
  "stackProductImages": {{ section.settings.stack_images | json }},
  "showThumbnails": {{ section.settings.show_thumbnails | json }},
  "enableVideoLooping": {{ section.settings.enable_video_looping | json }},
  "inventoryQuantityThreshold": {{ inventory_block.settings.inventory_quantity_threshold | default: 0 }},
  "showPriceInButton": {{ buy_buttons_block.settings.show_price_in_button | json }},
  "enableImageZoom": {{ section.settings.enable_image_zoom | json }},
  "showPaymentButton": {{ buy_buttons_block.settings.show_payment_button | json }},
  "useAjaxCart": {% if settings.cart_type == 'drawer' %}true{% else %}false{% endif %}
}
{%- endcapture -%}

<script>
  (() => {
    let items = JSON.parse(localStorage.getItem('recentlyViewedProducts') || '[]');
    if (!items.includes({{ product.id }})) {
      items.unshift({{ product.id }});
    }
    try {
      localStorage.setItem('recentlyViewedProducts', JSON.stringify(items.slice(0, 8)));
    } catch (error) {}
  })();
</script>

{%- comment -%} Resolve metafields — strip array brackets if metafield is list type {%- endcomment -%}
{%- assign ppv1_mat = product.metafields.custom['clothing-material'] -%}
{%- if ppv1_mat == blank -%}{%- assign ppv1_mat = product.metafields.custom.main_material -%}{%- endif -%}
{%- if ppv1_mat == blank -%}{%- assign ppv1_mat = product.metafields.custom.material -%}{%- endif -%}
{%- if ppv1_mat contains '[' -%}{%- assign ppv1_mat = ppv1_mat | remove: '["' | remove: '"]' | remove: '[' | remove: ']' | remove: '"' | strip -%}{%- endif -%}
{%- assign ppv1_stamp = product.metafields.custom.bag_stamp -%}
{%- if ppv1_stamp contains '[' -%}{%- assign ppv1_stamp = ppv1_stamp | remove: '["' | remove: '"]' | remove: '[' | remove: ']' | remove: '"' | strip -%}{%- endif -%}
{%- assign ppv1_condition = product.metafields.custom.condition -%}
{%- if ppv1_condition contains '[' -%}{%- assign ppv1_condition = ppv1_condition | remove: '["' | remove: '"]' | remove: '[' | remove: ']' | remove: '"' | strip -%}{%- endif -%}
{%- assign ppv1_location = product.metafields.custom.location -%}
{%- if ppv1_location contains '[' -%}{%- assign ppv1_location = ppv1_location | remove: '["' | remove: '"]' | remove: '[' | remove: ']' | remove: '"' | strip -%}{%- endif -%}

<section class="Product product-page-v1" data-section-id="{{ section.id }}" data-section-type="product" data-section-settings='{{ section_settings }}'>

  {%- comment -%} Hidden product form for theme JS / Offerly app compatibility {%- endcomment -%}
  {%- form 'product', product, class: 'ProductForm', style: 'display:none' -%}
    {%- render 'product-data', product: product -%}
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-product-select>
  {%- endform -%}

  {%- comment -%}----------------------------------------------------
  1. HERO SECTION
  ----------------------------------------------------{%- endcomment -%}

  <div class="ppv1-hero">
    <div class="ppv1-hero__gallery">
      {%- if product.featured_media -%}
        {%- assign hero_url = product.featured_media | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <img class="ppv1-hero__main-img Image--lazyLoad Image--fadeIn"
             data-src="{{ hero_url }}"
             data-widths="[600, 800, 1000, 1200]"
             data-sizes="auto"
             alt="{{ product.featured_media.alt | default: product.title | escape }}">
        <span class="Image__Loader"></span>
      {%- endif -%}
    </div>

    <div class="ppv1-hero__info">

      <h1 class="ppv1-title Heading u-h2">{{ product.title }}</h1>
      <hr class="ppv1-divider">

      {%- assign ppv1_has_meta = false -%}
      {%- if ppv1_mat != blank or ppv1_stamp != blank or ppv1_condition != blank or ppv1_location != blank -%}
        {%- assign ppv1_has_meta = true -%}
      {%- endif -%}

      {%- if ppv1_has_meta -%}
        <dl class="ppv1-meta">
          {%- if ppv1_mat != blank -%}
            <dt class="ppv1-meta__key">Material</dt>
            <dd class="ppv1-meta__val">{{ ppv1_mat }}</dd>
          {%- endif -%}
          {%- if ppv1_stamp != blank -%}
            <dt class="ppv1-meta__key">Stamp</dt>
            <dd class="ppv1-meta__val">{{ ppv1_stamp }}</dd>
          {%- endif -%}
          {%- if ppv1_condition != blank -%}
            <dt class="ppv1-meta__key">Condition</dt>
            <dd class="ppv1-meta__val">{{ ppv1_condition }}</dd>
          {%- endif -%}
          {%- if ppv1_location != blank -%}
            <dt class="ppv1-meta__key">Location</dt>
            <dd class="ppv1-meta__val">{{ ppv1_location }}</dd>
          {%- endif -%}
        </dl>
        <hr class="ppv1-divider">
      {%- endif -%}

      {%- comment -%} CTA row: form transparent to flex layout so both buttons sit side by side {%- endcomment -%}
      <div class="ppv1-cta-row">
        {%- form 'product', product, class: 'ppv1-form' -%}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-product-select>
          {%- if product.selected_or_first_available_variant.available -%}
            <button type="submit" class="Button Button--primary ppv1-atc-btn" data-action="add-to-cart">
              ADD TO CART &bull; {{ product.selected_or_first_available_variant.price | money }}
            </button>
          {%- else -%}
            <button type="button" class="Button Button--secondary ppv1-atc-btn" disabled>SOLD OUT</button>
          {%- endif -%}
        {%- endform -%}
        
      </div>
    </div>
  </div>

  {%- comment -%}----------------------------------------------------
  2. IMAGE CAROUSEL STRIP
  ----------------------------------------------------{%- endcomment -%}

  {%- if product.media.size > 1 -%}
    <div class="ppv1-strip">
      <button class="ppv1-strip__arrow ppv1-strip__arrow--prev" id="ppv1-prev" type="button" aria-label="Previous images">&#8592;</button>
      <div class="ppv1-strip__track" id="ppv1-track">
        {%- for media in product.media -%}
          {%- if media.media_type == 'image' -%}
            {%- assign strip_url = media | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <div class="ppv1-strip__slide">
              <img class="ppv1-strip__img Image--lazyLoad Image--fadeIn"
                   data-src="{{ strip_url }}"
                   data-widths="[400, 600, 800]"
                   data-sizes="auto"
                   alt="{{ media.alt | default: product.title | escape }}">
              <span class="Image__Loader"></span>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <button class="ppv1-strip__arrow ppv1-strip__arrow--next" id="ppv1-next" type="button" aria-label="Next images">&#8594;</button>
    </div>
  {%- endif -%}

  {%- comment -%}----------------------------------------------------
  3. ALL DETAILS SECTION
  ----------------------------------------------------{%- endcomment -%}

  <div class="ppv1-details">
    <div class="ppv1-details__header">
      <h2 class="ppv1-details__heading">ALL DETAILS</h2>
    </div>
    <div class="ppv1-details__cols">
      <div class="ppv1-details__left">
        {%- if product.description != blank -%}
          <div class="ppv1-description Rte">{{ product.description }}</div>
        {%- endif -%}
        <a href="https://wa.me/85293476168?text={{ 'Hello, I am interested in the ' | append: product.title | append: '!' | url_encode }}"
           target="_blank"
           rel="noopener"
           class="ppv1-btn ppv1-btn--tertiary">CHAT TO OUR TEAM</a>
      </div>

      <div class="ppv1-details__right">
        <div class="ppv1-accordion">

          {%- comment -%} Accordion: Product Details {%- endcomment -%}
          <div class="ppv1-accordion__item ppv1-accordion__item--first">
            <button class="ppv1-accordion__trigger" type="button" aria-expanded="false">
              <span>Product Details</span>
              <span class="ppv1-accordion__icon" aria-hidden="true">+</span>
            </button>
            <div class="ppv1-accordion__body">
              <div class="ppv1-accordion__content">
                <dl class="ppv1-detail-list">
                  {%- if product.vendor != blank -%}
                    <dt>Brand</dt><dd>{{ product.vendor }}</dd>
                  {%- endif -%}
                  {%- if ppv1_mat != blank -%}
                    <dt>Material</dt><dd>{{ ppv1_mat }}</dd>
                  {%- endif -%}
                  {%- if ppv1_stamp != blank -%}
                    <dt>Stamp</dt><dd>{{ ppv1_stamp }}</dd>
                  {%- endif -%}
                  {%- if ppv1_condition != blank -%}
                    <dt>Condition</dt><dd>{{ ppv1_condition }}</dd>
                  {%- endif -%}
                  {%- if ppv1_location != blank -%}
                    <dt>Location</dt><dd>{{ ppv1_location }}</dd>
                  {%- endif -%}
                </dl>
              </div>
            </div>
          </div>

          {%- comment -%} Accordion: Delivery {%- endcomment -%}
          {%- assign delivery_block = blank -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'content' and block.settings.title contains 'Delivery' -%}
              {%- assign delivery_block = block -%}
            {%- endif -%}
          {%- endfor -%}
          <div class="ppv1-accordion__item">
            <button class="ppv1-accordion__trigger" type="button" aria-expanded="false">
              <span>Delivery</span>
              <span class="ppv1-accordion__icon" aria-hidden="true">+</span>
            </button>
            <div class="ppv1-accordion__body">
              <div class="ppv1-accordion__content">
                {%- if delivery_block != blank -%}
                  <div class="Rte">{{ delivery_block.settings.content }}</div>
                {%- else -%}
                  <p>DHL delivery within 1–2 working days. For local pick up in London please contact us directly. Free shipping. You will receive your receipt via email.</p>
                {%- endif -%}
              </div>
            </div>
          </div>

          {%- comment -%} Accordion: Payment Methods {%- endcomment -%}
          {%- assign payment_block = blank -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'content' and block.settings.title contains 'Payment' -%}
              {%- assign payment_block = block -%}
            {%- endif -%}
          {%- endfor -%}
          <div class="ppv1-accordion__item">
            <button class="ppv1-accordion__trigger" type="button" aria-expanded="false">
              <span>Payment Methods</span>
              <span class="ppv1-accordion__icon" aria-hidden="true">+</span>
            </button>
            <div class="ppv1-accordion__body">
              <div class="ppv1-accordion__content">
                {%- if payment_block != blank -%}
                  <div class="Rte">{{ payment_block.settings.content }}</div>
                {%- else -%}
                  <p>We accept Visa, Mastercard, Maestro, American Express, Apple Pay &amp; PayPal. For WeChat Pay or Alipay, please contact us directly.</p>
                {%- endif -%}
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  {%- comment -%}----------------------------------------------------
  4. DISCOVER THE STORY SECTION (configurable via "Discover the Story" block)
  ----------------------------------------------------{%- endcomment -%}

  {%- assign story_block = section.blocks | where: 'type', 'discover_story' | first -%}

  {%- comment -%} Story image: block override → second product image → first product image {%- endcomment -%}
  {%- if story_block != blank and story_block.settings.image != blank -%}
    {%- assign story_use_picker = true -%}
    {%- assign story_picker_img = story_block.settings.image -%}
  {%- else -%}
    {%- assign story_use_picker = false -%}
    {%- assign story_media = product.media[1] -%}
    {%- if story_media == blank or story_media.media_type != 'image' -%}
      {%- assign story_media = product.media[0] -%}
    {%- endif -%}
  {%- endif -%}

  {%- comment -%} Story text: block richtext → product description truncated {%- endcomment -%}
  {%- if story_block != blank and story_block.settings.text != blank -%}
    {%- assign story_text_html = story_block.settings.text -%}
  {%- elsif product.description != blank -%}
    {%- assign story_text_plain = product.description | strip_html | truncatewords: 70 -%}
  {%- endif -%}

  {%- assign story_btn_label = 'READ MORE' -%}
  {%- assign story_btn_url = product.url -%}
  {%- if story_block != blank -%}
    {%- if story_block.settings.button_text != blank -%}{%- assign story_btn_label = story_block.settings.button_text -%}{%- endif -%}
    {%- if story_block.settings.button_url != blank -%}{%- assign story_btn_url = story_block.settings.button_url -%}{%- endif -%}
  {%- endif -%}

  <div class="ppv1-story" {% if story_block != blank %}{{ story_block.shopify_attributes }}{% endif %}>
    <div class="ppv1-story__cols">
      <div class="ppv1-story__image">
        {%- if story_use_picker -%}
          {%- assign story_picker_url = story_picker_img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="ppv1-story__img Image--lazyLoad Image--fadeIn"
               data-src="{{ story_picker_url }}"
               data-widths="[600, 800, 1000]"
               data-sizes="auto"
               alt="{{ story_picker_img.alt | default: product.title | escape }}">
          <span class="Image__Loader"></span>
        {%- elsif story_media and story_media.media_type == 'image' -%}
          {%- assign story_url = story_media | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="ppv1-story__img Image--lazyLoad Image--fadeIn"
               data-src="{{ story_url }}"
               data-widths="[600, 800, 1000]"
               data-sizes="auto"
               alt="{{ story_media.alt | default: product.title | escape }}">
          <span class="Image__Loader"></span>
        {%- endif -%}
      </div>
      <div class="ppv1-story__content">
        <h2 class="ppv1-story__heading">DISCOVER THE STORY</h2>
        {%- if story_text_html != blank -%}
          <div class="ppv1-story__text Rte">{{ story_text_html }}</div>
        {%- elsif story_text_plain != blank -%}
          <div class="ppv1-story__text">{{ story_text_plain }}</div>
        {%- endif -%}
        <a href="{{ story_btn_url }}" class="ppv1-btn ppv1-btn--tertiary ppv1-btn--centered">{{ story_btn_label }}</a>
      </div>
    </div>
  </div>

</section>

{%- if section.settings.enable_image_zoom -%}
  <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="pswp__bg"></div>
    <div class="pswp__scroll-wrap">
      <div class="pswp__container">
        <div class="pswp__item"></div>
        <div class="pswp__item"></div>
        <div class="pswp__item"></div>
      </div>
      <div class="pswp__ui pswp__ui--hidden">
        <button class="pswp__button pswp__button--prev RoundButton" data-animate-left title="{{ 'product.slideshow.previous' | t }}">{% render 'icon' with 'arrow-left' %}</button>
        <button class="pswp__button pswp__button--close RoundButton RoundButton--large" data-animate-bottom title="{{ 'product.slideshow.close' | t }}">{% render 'icon' with 'close' %}</button>
        <button class="pswp__button pswp__button--next RoundButton" data-animate-right title="{{ 'product.slideshow.next' | t }}">{% render 'icon' with 'arrow-right' %}</button>
      </div>
    </div>
  </div>
{%- endif -%}

<script>
  window.ShopifyXR=window.ShopifyXR||function(){(ShopifyXR.q=ShopifyXR.q||[]).push(arguments)};
  ShopifyXR('addModels', {{ product.media | where: 'media_type', 'model' | json }});
</script>

